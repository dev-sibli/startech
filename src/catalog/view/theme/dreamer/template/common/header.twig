<!DOCTYPE html>
<!--[if IE]><![endif]-->
<!--[if IE 8 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie8"><![endif]-->
<!--[if IE 9 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie9"><![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<html dir="{{ direction }}" lang="{{ lang }}">
<!--<![endif]-->
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<title>{{ title }}</title>
<base href="{{ base }}" />
{% if description %}
<meta name="description" content="{{ description }}" />
{% endif %}
{% if keywords %}
<meta name="keywords" content="{{ keywords }}" />
{% endif %}
{# jQuery, Bootstrap, Font Awesome, and Google Fonts are intentionally not loaded here.
   jQuery is registered as a header-position script via header.php for extension compatibility.
   Bootstrap and Font Awesome are replaced by the Dreamer theme's custom CSS and Material Icons. #}
<link href="/catalog/view/theme/dreamer/stylesheet/main.css?v=7" rel="stylesheet">
{% for style in styles %}
<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
{% endfor %}
{% for script in scripts %}
<script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
{# common.js removed â€” replaced by catalog/view/theme/dreamer/javascript/app.js (loaded via footer.twig) #}
{% for link in links %}
<link href="{{ link.href }}" rel="{{ link.rel }}" />
{% endfor %}
{% for analytic in analytics %}
{{ analytic }}
{% endfor %}
</head>

<body>

  <header class="header-main">
    <div class="container">
      <div class="header-inner">
        <div class="logo-wrapper">
          <div id="logo">
            {% if logo %}
            <a href="{{ home }}"><img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" /></a>
            {% else %}
            <h1><a href="{{ home }}">{{ name }}</a></h1>
            {% endif %}
          </div>
        </div>
        <div class="search-wrapper">
          {{ search }}
        </div>
        <div class="header-actions">
          <div class="action-item">
            <span class="icon"><i class="material-icons">card_giftcard</i></span>
            <div class="info">
              <span class="action-title">Offers</span>
              <span class="action-subtitle">Latest Offers</span>
            </div>
          </div>
          <div class="action-item">
            <span class="icon"><i class="material-icons">flash_on</i></span>
            <div class="info">
              <span class="action-title">Happy Hour</span>
              <span class="action-subtitle">Special Deals</span>
            </div>
          </div>
          <a href="{{ account }}" class="action-item">
            <span class="icon"><i class="material-icons">person</i></span>
            <div class="info">
              <span class="action-title">Account</span>
              <span class="action-subtitle">Register or Login</span>
            </div>
          </a>
          <a href="index.php?route=product/pc_builder" class="btn-pc-builder">PC Builder</a>
        </div>
      </div>
    </div>
  </header>

  {{ menu }}

  {# Navbar toggle is handled by app.js (loaded in footer) #}